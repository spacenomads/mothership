{
  "name": "mothership",
  "version": "3.0.0",
  "description": "Space Nomads' website",
  "main": "dist/index.html",
  "devDependencies": {
    "@11ty/eleventy": "^1.0.2",
    "@11ty/eleventy-navigation": "^0.3.5",
    "@hail2u/css-mqpacker": "github:hail2u/node-css-mqpacker",
    "cross-env": "^7.0.3",
    "eslint": "^6.8.0",
    "eslint-config-recommended": "^4.1.0",
    "gulp": "^4.0.2",
    "gulp-autoprefixer": "^8.0.0",
    "gulp-if": "^3.0.0",
    "gulp-minify": "^3.1.0",
    "gulp-postcss": "^9.0.1",
    "gulp-sass": "^5.1.0",
    "gulp-sourcemaps": "^3.0.0",
    "gulp-zip": "^5.1.0",
    "html-minifier": "^4.0.0",
    "npm-run-all": "^4.1.5",
    "postcss": "^8.4.31",
    "sass": "^1.55.0",
    "stylelint": "^14.13.0",
    "stylelint-config-standard-scss": "^5.0.0"
  },
  "bugs": {
    "url": "https://github.com/spacenomads/mothership/issues"
  },
  "scripts": {
    "build": "(npm run clean || true) && npm run build:assets && eleventy",
    "build:pro": "cross-env MODE=pro npm run build",
    "watch": "eleventy --watch",
    "serve": "npm run clean && eleventy --serve",
    "start": "cross-env MODE=dev npm-run-all --parallel watch:assets serve",
    "watch:assets": "gulp go",
    "build:assets": "gulp build",
    "clean": "rm -rf dist/*",
    "debug": "DEBUG=* eleventy"
  },
  "browserslist": [
    "last 2 versions",
    "ie >= 10"
  ],
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com:spacenomads/mothership.git"
  },
  "author": "Space Nomads",
  "license": "CC0-1.0",
  "homepage": "https://github.com/spacenomads/mothership"
}
