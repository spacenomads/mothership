{
  "extends": "stylelint-config-standard",
  "plugins": [
    "stylelint-scss"
  ],
  "rules": {
    "indentation": "tab",
    "at-rule-no-unknown": null,
    "number-leading-zero": "never",
    "selector-class-pattern": "^([a-z][a-z0-9]*)((__|_|-|--)[a-z0-9]+)*$",
    "scss/at-rule-no-unknown": true,
    "scss/at-extend-no-missing-placeholder": true,
    "max-empty-lines": 5
  }
}
